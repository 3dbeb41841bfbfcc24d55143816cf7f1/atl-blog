<h1>Your Post</h1>

<h3><%= @post.title %></h3>

<p><%= @post.body %></p>
<p><%= @post.author %></p>

<%= link_to 'Edit', edit_post_path(@post) %>
<%= link_to 'Back', posts_path %>

<%= link_to 'Delete', post_path(@post),
                method: :delete,
                data: { confirm: 'Are you sure?'} %>
